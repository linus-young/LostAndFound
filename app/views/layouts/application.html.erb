<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title( yield(:title) ) %></title>
    <!-- <link href="//netdna.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap.min.css" rel="stylesheet"> -->

    <%= stylesheet_link_tag    "application", media: "all",
                          "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag('my_jquery.js') %>
    <%= csrf_meta_tags %>

    <%# Only when IE version < 9, load HTML5 shim. Other browsers are okay.  %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <div class="container" style="width: 940px">
      <%= render 'layouts/header' %>
    </div>

      <% flash.each do | key, value | %>
        <%= content_tag( :div, value, class: "alert alert-#{key}" ) %>
      <% end %>

      <%= yield %>


      <div class="container">
        <%= render 'layouts/footer' %>
      </div>
      <%= debug(params) if Rails.env.development? %>

    <!-- <script src="//netdna.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/js/bootstrap.min.js"></script> -->
  </body>
</html>

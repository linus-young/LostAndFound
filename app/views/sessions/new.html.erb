<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= simple_form_for(:session, url: sessions_path,
												 html: { class: "signin_form" }) do |f| %>

			<%= f.input :email %>
			<%= f.input :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

		<p class="new_user">
			New user? <%= link_to 'Sign up now!', register_path %>
		</p>
	</div>
</div>